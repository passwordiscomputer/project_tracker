<h1>Update <%= @project.title() %> Project</h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

    <label for="title">Rename your project:</label>
    <input id="title" name="title" type="text">

    <button type="submit" class="button btn-success">Update Project</button>
</form>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="button btn-danger">Delete Project</button>
</form>
